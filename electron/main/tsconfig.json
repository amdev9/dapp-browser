{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["es2018", "es2017", "dom", "scripthost"],
    "noImplicitAny": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "types/*"],
      "ClientApp/*": ["../client/*"],
      "DappApp/*": ["../dapps/lib/*"],
      "PermissionApp/*": ["../permissionManager/lib/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true
  },
  "include": [
    "./*", "test/*", "types/logger/*"
  ],
  "exclude": [
    "node_modules"
  ]
}

