{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "lib": ["es2017", "dom", "scripthost"],
    "noImplicitAny": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "types/*"],
      "ClientApp/*": ["../../client/*"],
      "MainApp/*": ["../../main/*"],
      "PermissionApp/*": ["../../permissionManager/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "sourceMap": true
  },
  "include": [
    "./*"
  ],
  "exclude": [
    "node_modules"
  ]
}
